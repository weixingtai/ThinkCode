<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/md_sys_margin_medium"
            android:layout_marginEnd="@dimen/md_sys_margin_medium"
            android:orientation="vertical"
            android:paddingBottom="@dimen/md_sys_margin_bottom_max">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/md_sys_margin_medium"
                android:text="@string/divider_item_decoration_horizontal"
                android:textAppearance="?attr/textAppearanceTitleLarge" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/divider_recyclerview_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/md_sys_margin_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/md_sys_margin_medium"
                android:text="@string/divider_item_decoration_vertical"
                android:textAppearance="?attr/textAppearanceTitleLarge" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/divider_recyclerview_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>