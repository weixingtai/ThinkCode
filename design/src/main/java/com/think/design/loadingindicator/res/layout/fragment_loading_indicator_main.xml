<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/md_sys_margin_medium"
            android:layout_marginEnd="@dimen/md_sys_margin_medium"
            android:orientation="vertical"
            android:paddingBottom="@dimen/md_sys_margin_bottom_max">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_indicator_default" />

            <com.google.android.material.loadingindicator.LoadingIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_indicator_with_container" />

            <com.google.android.material.loadingindicator.LoadingIndicator
                style="@style/Widget.Material3.LoadingIndicator.Contained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_indicator_with_multiple_colors" />

            <com.google.android.material.loadingindicator.LoadingIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorColor="@array/loading_indicator_colors" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_indicator_in_a_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loading_indicator_btn"
                style="?attr/materialIconButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</layout>