<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/home_header_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:paddingStart="@dimen/md_sys_margin_medium"
            android:paddingEnd="@dimen/md_sys_margin_medium"
            android:contentDescription="@string/home_search_description"
            android:visibility="gone"
            app:iconifiedByDefault="false"
            app:searchIcon="@drawable/ic_arrow_back_black_24dp"
            app:srcCompat="@drawable/ic_search_24px" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/home_header_search_button"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/md_sys_toolbar_icon"
                android:minWidth="@dimen/md_sys_toolbar_icon"
                android:background="?attr/actionBarItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/home_header_preferences_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_search_24px"
                android:contentDescription="@string/home_search_description"/>

            <ImageButton
                android:id="@+id/home_header_preferences_button"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/md_sys_toolbar_icon"
                android:minWidth="@dimen/md_sys_toolbar_icon"
                android:background="?attr/actionBarItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_settings_24px"
                android:contentDescription="@string/home_close_preferences_description"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</layout>