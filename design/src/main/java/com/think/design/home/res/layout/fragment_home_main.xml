<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/home_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/home_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/home_collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_sys_toolbar_height"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/home_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin" />

                <FrameLayout
                    android:id="@+id/home_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_collapseMode="parallax">

                    <TextView
                        android:id="@+id/home_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/md_sys_margin_mini"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/app_name"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        app:drawableStartCompat="@drawable/ic_logo_components_48px"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/home_search_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:contentDescription="@string/home_search_description"
                        android:paddingStart="@dimen/md_sys_margin_medium"
                        android:paddingEnd="@dimen/md_sys_margin_medium"
                        android:visibility="gone"
                        app:iconifiedByDefault="false"
                        app:searchIcon="@drawable/ic_arrow_back_black_24dp"
                        app:srcCompat="@drawable/ic_search_24px" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/home_search_button"
                            style="@style/Widget.AppCompat.ImageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/actionBarItemBackground"
                            android:contentDescription="@string/home_search_description"
                            android:minWidth="@dimen/md_sys_toolbar_icon"
                            android:minHeight="@dimen/md_sys_toolbar_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/home_preferences_button"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_search_24px" />

                        <ImageButton
                            android:id="@+id/home_preferences_button"
                            style="@style/Widget.AppCompat.ImageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/actionBarItemBackground"
                            android:contentDescription="@string/home_close_preferences_description"
                            android:minWidth="@dimen/md_sys_toolbar_icon"
                            android:minHeight="@dimen/md_sys_toolbar_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_settings_24px" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <View
            android:id="@+id/home_top_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/md_sys_divider_regular"
            android:background="@color/md_sys_grid_divider_color"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>